<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Design" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="UserProfileTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CoughMedicineTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/dark_blue</item>
    </style>

    <style name="roundImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#C3C3C3</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="tabSelectedTextColor">@color/dark_blue</item>
    </style>

    <style name="medicineTextInputLayoutPlaceholderAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="RecyclerViewKtTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/recyclerview_kt_screen_primary_color</item>
    </style>

    <style name="RecyclerViewKtComponentsStyle">
        <item name="android:background">@drawable/bg_card_edit_text</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="RecyclerViewKtButtonStyle">
        <item name="android:backgroundTint">@color/recyclerview_kt_screen_primary_color</item>
        <item name="tint">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="cornerRadius">@dimen/_20dp</item>
    </style>

    <style name="HomeScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RoundedBottomSheet" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="behavior_peekHeight">200dp</item>
    </style>
</resources>
