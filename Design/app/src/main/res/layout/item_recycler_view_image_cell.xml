<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_120dp"
    android:layout_height="@dimen/_140dp"
    style="@style/RecyclerViewKtComponentsStyle"
    android:clipToOutline="true"
    android:layout_marginEnd="@dimen/_10dp"
    android:padding="@dimen/_1dp">

    <ImageView
        android:id="@+id/cellImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_5dp"
        app:layout_goneMarginTop="@dimen/_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteCell"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/btnDeleteCell"
        android:layout_width="@dimen/_15dp"
        android:layout_height="@dimen/_15dp"
        android:layout_margin="@dimen/_5dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/content_description_delete_image"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/recyclerview_kt_screen_primary_color"
        android:tintMode="multiply"/>


</androidx.constraintlayout.widget.ConstraintLayout>