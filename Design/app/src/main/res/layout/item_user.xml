<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/companyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundImage"
            tools:srcCompat="@drawable/ic_company" />

        <TextView
            android:id="@+id/tvCompanyRole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:fontFamily="@font/poppins_semibold"
            tools:text="Role"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tvCompanyName"
            app:layout_constraintEnd_toStartOf="@+id/tvLocation"
            app:layout_constraintStart_toEndOf="@+id/companyImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            tools:text="Company name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/user_profile_secondary_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvDuration"
            app:layout_constraintStart_toStartOf="@+id/tvCompanyRole"
            app:layout_constraintTop_toBottomOf="@+id/tvCompanyRole" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            tools:text="Location"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintBottom_toTopOf="@+id/tvDuration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvCompanyRole"/>

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            tools:text="duration"
            android:textAlignment="viewEnd"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_10dp"
            android:maxLines="1"
            android:textColor="@color/user_profile_secondary_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvCompanyName"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
